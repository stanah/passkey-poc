{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "scripts/**/*", "hardhat.config.ts"],
  "exclude": ["node_modules", "dist"]
}
